page {
    height: 100%;
}

.background {
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index: -1;
}

.container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
    height: 100%;
}

.text_style {
    width: 300rpx;
    height: 200rpx;
    border-radius: 70rpx;
    background-color: #5992AD;
    margin-top: 20px;
    margin-bottom: 15px;
    display: flex;
    flex-direction: column;
    color: #ffffff;
    justify-content: center;
}

.text_style_1 {
    margin-top: 10rpx;
    margin-bottom: 20rpx;
    font-size: 55rpx;
    font-family: 'Courier New', Courier, monospace;
    display: flex;
    justify-content: center;
    align-items: center;
}
