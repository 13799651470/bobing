page{
  height:100%;
}

/* 背景样式 */
.v-background {
  width: 100%;
  height: 100%;
  position: fixed; 
  background-size: 100% 100%;
  z-index: -1;
}

.v-blank{
  height: 100px;
}

.content{
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 按钮样式 */
.v-btn{
  display: flex;
  flex-direction: column;
  color: #ffffff;
  width: 50vw;
  height: 10vh;
  border-radius: 40rpx;
  background-color: #f0cda0;
  justify-content: space-around; 
  margin-bottom: 50px;
}

text{
  margin-bottom: 65rpx;
  font-size:60rpx;
  font-family:'Courier New', Courier, monospace;
  display: flex;
  justify-content: center;
  align-items: center;
}