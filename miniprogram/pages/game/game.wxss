page{
  height: 100%;
}
.container{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
}

/* 骰子图片样式 */

.v-image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 70rpx;
  background-color:#5992AD;
  margin-top: 10px;
  margin-bottom: 15px;
}

/* 页面背景设置 */

.background{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}


/* 按钮样式 */

.v-btn{
  height: 55px;
  background-color: #5992AD;
  margin-top: 10px;
  color: white;
  border-radius: 40rpx;
}

/* 文字样式 */

text{
  margin-top: 18rpx;
  font-size:50rpx;
  font-family:'Courier New', Courier, monospace;
  display: flex;
  justify-content: center;
  align-items: center;
}
